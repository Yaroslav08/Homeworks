<Window x:Class="WPFLaba9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLaba9"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Button x:Name="btnDecrypt" Width="75" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Content="Decrypt data" Click="Button_Click"></Button>
        <Button x:Name="btnEncrypt" Width="75" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Content="Encrypt data" Click="Button_Click"></Button>
        <TextBox x:Name="tbText" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0 35 0 0" TextWrapping="Wrap"></TextBox>
    </Grid>
</Window>
